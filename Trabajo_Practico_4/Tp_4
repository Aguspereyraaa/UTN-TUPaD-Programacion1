#Ej2

num = int(input("Ingrese un numero:"))

cantidad_digito = len(str(num))

print("El numero tiene", cantidad_digito, "digitos")

#Ej3

numero_usuario = int(input("Ingrese un numero:"))
numero_usuario2 = int(input("Ingrese otro numero:"))

inicio = min(numero_usuario, numero_usuario2)
maximo = max(numero_usuario, numero_usuario2)

suma = 0 

for i in range (inicio + 1, maximo):

    suma += i

print("La suma de los numeros entre", inicio, "y", maximo, "es:", suma)

#Ej4

num = int(input("Ingrese un nuemero: "))

cont = num 

while num > 0:
    num_acumulador = int(input("Ingrese otro numero (Ingrese 0 para terminar):"))
    cont += num_acumulador
    if num_acumulador == 0 :
        break

print(f"El total acumulado es: {cont}")

#Ej5 

num = int(input("Ingrese un numero entre 0 y 9: "))

cont = 0

import random

numero_aleatorio = random.randint(0,9)

while num != numero_aleatorio:

    if num == numero_aleatorio:
        
        cont += 1
    elif num != numero_aleatorio:

        cont += 1
        
        print("Intente nuevamente")

        num = int(input("Ingrese un numero entre 0 y 9: "))

print(f"Felicitaciones, el numero era {numero_aleatorio}, lo ha adivinado en {cont} intentos")

#Ej6 

for i in range(100, -1, -1):

    if i % 2 == 0:

        print(i)

#Ej7

num = int(input("Ingrese un numero: "))

suma = 0

for i in range(0, num + 1):   
    
    suma += i

    print(f"La suma de los numeros entre el 0 y el {num} es: {suma}")
    
#Ej8

cont_positivos = 0
cont_negativos = 0
cont_pares = 0
cont_impares = 0

for i in range(100):
    num = int(input("Ingrese un numero: "))

    if num % 2 == 0:
        cont_pares += 1
    if num % 2 != 0:
        cont_impares += 1
    if num > 0:
        cont_positivos += 1
    if num < 0:
        cont_negativos += 1

print("\n--- Resultados ---")
print(f"Cantidad de numeros pares: {cont_pares}")
print(f"Cantidad de numeros impares: {cont_impares}")  
print(f"Cantidad de numeros positivos: {cont_positivos}")
print(f"Cantidad de numeros negativos: {cont_negativos}")

#Ej9

cont = 0

suma = 0

for i in range(10): 
    num = int(input("Ingrese un numero: "))
    cont += 1
    suma += num

media = suma / cont

print(f"La suma de los numeros ingresados son: {suma} y la media es: {media}")

#Ej10

numero_original = input("Ingrese un número para invertir sus dígitos: ")

numero_invertido = ""

for i in range(len(numero_original) - 1, -1, -1):
    numero_invertido += numero_original[i]

print("El número invertido es:", numero_invertido)